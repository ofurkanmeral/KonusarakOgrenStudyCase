

@model KonusarakOgren.Web.Models.UserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link href="~/css/StyleSheet.css" rel="stylesheet" />

<div class="outer-box">
    <div class="login-box">
        <form href="/Account/Login" method="post">
            <h4 class="login-text">Giriş</h4>
            <center>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="username" placeholder="Kullanıcı Adı">
                <input asp-for="password" placeholder="Şifre">

                <button class="btn btn-dark" type="submit">Giriş Yap</button>
            </center>
        </form>
    </div>
</div>
