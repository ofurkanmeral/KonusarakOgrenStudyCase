@model KonusarakOgren.Entity.Exam

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<div class="container">
    <div class="row">
        <h4 style="text-align:center">@Model.title</h4>
        <br />
        <hr />
        <h2>@Model.description</h2>
        <hr />
        <br /><br /><b></b>
        <div class="row">
            <div class="col-md-6">
                @for (int i = 0; i <= 1; i++)
                {
                    <h6>@i-      @Model.Questions[i].Name</h6>


                    <label class="btn btn-light" name="radioA-@i">
                        <input class="form-check-input" type="radio" name="radio-@i" id="radio-@i" value="1">
                        @Model.Questions[i].Answers[0].optionA
                    </label><br />
                    <label class="btn btn-light" name="radioB-@i">
                        <input class="form-check-input" type="radio" name="radio-@i" id="radio-@i" value="2">
                        @Model.Questions[i].Answers[0].optionB
                    </label><br />
                    <label class="btn btn-light" name="radioC-@i">
                        <input class="form-check-input" type="radio" name="radio-@i" id="radio-@i" value="3">
                        @Model.Questions[i].Answers[0].optionC
                    </label><br />
                    <label class="btn btn-light" name="radioD-@i">
                        <input class="form-check-input" type="radio" name="radio-@i" id="radio-@i" value="4">

                        @Model.Questions[i].Answers[0].optionD
                    </label>
                    <input name="state-@i" hidden value="@Model.Questions[i].Answers[0].correct" />
                    <br />
                    <br />
                    <br />
                    <br />
                }
            </div>
            <div class="col-md-6">

                @for (int i = 2; i <= 3; i++)
                {
                    <h6>@i-  @Model.Questions[i].Name</h6>

                    <label class="btn btn-light" name="radioA-@i">
                        <input class="form-check-input" type="radio" name="radio-@i" id="radio-@i" value="1">
                        @Model.Questions[i].Answers[0].optionA
                    </label><br />
                    <label class="btn btn-light" name="radioB-@i">
                        <input class="form-check-input" type="radio" name="radio-@i" id="radio-@i" value="2">
                        @Model.Questions[i].Answers[0].optionB
                    </label><br />
                    <label class="btn btn-light" name="radioC-@i">
                        <input class="form-check-input" type="radio" name="radio-@i" id="radio-@i" value="3">
                        @Model.Questions[i].Answers[0].optionC
                    </label><br />
                    <label class="btn btn-light" name="radioD-@i">
                        <input class="form-check-input" type="radio" name="radio-@i" id="radio-@i" value="4">

                        @Model.Questions[i].Answers[0].optionD
                    </label>
                    <input name="state-@i" hidden value="@Model.Questions[i].Answers[0].correct" />
                    <br />
                    <br />
                    <br />
                    <br />
                }

            </div>
        </div>
        <button class="btn btn-success" id="sonuc">Sonuçları Göster</button>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<script>
    $(document).on('click', "[name='radio-0']", function () {
        console.log("onur")
        var btn = $(this);

    })



    $(document).on('click', '#sonuc', function () {
        answerOne = $("input[name='radio-0']:checked").val()
        answerTwo = $("input[name='radio-1']:checked").val()
        answerThree = $("input[name='radio-2']:checked").val()
        answerFour = $("input[name='radio-3']:checked").val()

        stateOne = $("[name='state-0").val()
        stateTwo = $("[name='state-1").val()
        stateThree = $("[name='state-2").val()
        stateFour = $("[name='state-3").val()

        if (stateOne == answerOne) {
            $("input[name='radio-0']:checked").parent('label').removeClass('btn btn-light')
            $("input[name='radio-0']:checked").parent('label').addClass('btn btn-success')
        }
        else {
            $("input[name='radio-0']:checked").parent('label').removeClass('btn btn-light')
            $("input[name='radio-0']:checked").parent('label').addClass('btn btn-danger')
        }

        if (stateTwo == answerTwo) {
            $("input[name='radio-1']:checked").parent('label').removeClass('btn btn-light')
            $("input[name='radio-1']:checked").parent('label').addClass('btn btn-success')
        }
        else {
            $("input[name='radio-1']:checked").parent('label').removeClass('btn btn-light')
            $("input[name='radio-1']:checked").parent('label').addClass('btn btn-danger')
        }

        if (stateThree == answerThree) {
            $("input[name='radio-2']:checked").parent('label').removeClass('btn btn-light')
            $("input[name='radio-2']:checked").parent('label').addClass('btn btn-success')
        }
        else {
            $("input[name='radio-2']:checked").parent('label').removeClass('btn btn-light')
            $("input[name='radio-2']:checked").parent('label').addClass('btn btn-danger')
        }

        if (stateFour == answerFour) {
            $("input[name='radio-3']:checked").parent('label').removeClass('btn btn-light')
            $("input[name='radio-3']:checked").parent('label').addClass('btn btn-success')
        }
        else {
            $("input[name='radio-3']:checked").parent('label').removeClass('btn btn-light')
            $("input[name='radio-3']:checked").parent('label').addClass('btn btn-danger')
        }
    })

</script>