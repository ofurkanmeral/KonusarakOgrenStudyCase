                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">D</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[2].Answers[0].optionD">
                </div>
            </div>
        </div>
        <select class="form-select form-select-sm" asp-for="@Model.Questions[2].Answers[0].correct">
            <option selected>Doğru Cevabı Seçiniz</option>
            <option value="1">A</option>
            <option value="2">B</option>
            <option value="3">C</option>
            <option value="3">D</option>
        </select>
        <br />


        <div class="row">
            <div class="input-group input-group">
                <span class="input-group-text">Soru 4</span>
                <input type="text" class="form-control" asp-for="@Model.Questions[3].Name">
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">A</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[3].Answers[0].optionA">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">B</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[3].Answers[0].optionB">
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">C</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[3].Answers[0].optionC">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">D</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[3].Answers[0].optionD">
                </div>
            </div>
        </div>
        <select class="form-select form-select-sm" asp-for="@Model.Questions[3].Answers[0].correct">
            <option selected>Doğru Cevabı Seçiniz</option>
