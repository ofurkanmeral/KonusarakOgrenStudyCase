<script>

    $(document).ready(function () {

        $(document).on('change', '#selectWork', function () {
            var val = $('#selectWork').val();
            $.ajax({
                method: 'post',
                url: '/Home/GetDescription',
                data: { val: val },
                success: function (response) {
                    $('#textAreaDescription').text(response.description);
                }
            })
        })


    })

</script>
