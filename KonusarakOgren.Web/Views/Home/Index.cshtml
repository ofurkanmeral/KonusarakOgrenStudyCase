@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model KonusarakOgren.Entity.Exam
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">




<div class="container">
    <br />
    <br />
    <br />

    <form action="/Home/SaveQuestion" method="post">
        <div class="row">
            <select class="form-select" id="selectWork" asp-for="@Model.title">
                <option selected>Lütfen Seçiniz</option>
                @for (int i = 0; i < 5; i++)
                {
                    <option value="@ViewBag.link[i]">@ViewBag.title[i]</option>

                }

            </select>
            <hr />
            <div class="card">
                <div class="card-body">
                    <textarea id="textAreaDescription" style="width:100%;height:85%;border:none;outline:none" asp-for="@Model.description" placeholder="Lütfen Üstteki Selecti Doldurunuz"></textarea>
                </div>
            </div>

        </div>
        <br /><br />

        <div class="row">
            <div class="input-group input-group">
                <span class="input-group-text">Soru 1</span>
                <input type="text" class="form-control" asp-for="@Model.Questions[0].Name">
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">A</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[0].Answers[0].optionA">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">B</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[0].Answers[0].optionB">
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">C</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[0].Answers[0].optionC">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">D</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[0].Answers[0].optionD">
                </div>
            </div>
        </div>
        <select class="form-select form-select-sm" asp-for="@Model.Questions[0].Answers[0].correct">
            <option selected>Doğru Cevabı Seçiniz</option>
            <option value="1">A</option>
            <option value="2">B</option>
            <option value="3">C</option>
            <option value="3">D</option>
        </select>
        <br />

        <div class="row">
            <div class="input-group input-group">
                <span class="input-group-text">Soru 2</span>
                <input type="text" class="form-control" asp-for="@Model.Questions[1].Name">
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">A</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[1].Answers[0].optionA">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">B</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[1].Answers[0].optionB">
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">C</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[1].Answers[0].optionC">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">D</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[1].Answers[0].optionD">
                </div>
            </div>
        </div>
        <select class="form-select form-select-sm" asp-for="@Model.Questions[1].Answers[0].correct">
            <option selected>Doğru Cevabı Seçiniz</option>
            <option value="1">A</option>
            <option value="2">B</option>
            <option value="3">C</option>
            <option value="3">D</option>
        </select>
        <br />


        <div class="row">
            <div class="input-group input-group">
                <span class="input-group-text">Soru 3</span>
                <input type="text" class="form-control" asp-for="@Model.Questions[2].Name">
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">A</span>
                    <input type="text" class="form-control" asp-for="@Model.Questions[2].Answers[0].optionA">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text">B</span>
